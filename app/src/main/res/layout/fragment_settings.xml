<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

   <androidx.cardview.widget.CardView
       android:id="@+id/cv1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp">
           <ImageView
               android:id="@+id/cover_image_visit_user"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:scaleType="centerCrop"/>
           <Button
               android:id="@+id/set_cover_image_camera"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/editing_cover_photo"
               android:layout_below="@id/cover_image_visit_user"
               android:layout_marginTop="-55dp"
               android:layout_toEndOf="@id/cover_image_visit_user"
               android:layout_marginStart="-105dp"
               android:drawablePadding="2dp"
               android:textSize="13sp"
               android:drawableLeft="@drawable/ic_baseline_camera_alt_24"/>
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profile_image_visit_user"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="140dp"
               android:scaleType="centerCrop"
               android:src="@drawable/avatar"/>
           <ImageButton
               android:id="@+id/set_profile_image_camera"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@id/profile_image_visit_user"
               android:layout_below="@id/profile_image_visit_user"
               android:background="@drawable/round_background"
               android:layout_marginStart="-40dp"
               android:layout_marginTop="-40dp"
               android:src="@drawable/ic_baseline_camera_alt_24"/>
           <TextView
               android:id="@+id/username_visit_user"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tmp_string"
               android:layout_below="@+id/profile_image_visit_user"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="15dp"
               android:textColor="@color/colorPrimaryDark"
               android:textStyle="bold"
               android:textSize="20sp"
               android:layout_marginBottom="20dp"/>
       </RelativeLayout>
   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/container_links"
        android:gravity="center"
        android:layout_below="@id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="6dp">
        <ImageView
            android:id="@+id/set_facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fb_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/set_instagram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ins_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/set_website"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/web_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_verify_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send verify email"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/container_links"/>


</RelativeLayout>